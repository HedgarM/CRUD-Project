  <style>
    :root {
      --bg-color: #ffffff;
      --text-color: #212529;
      --header-bg: #0d6efd;
      --card-bg: #f8f9fa;
      --btn-bg: #0d6efd;
      --btn-color: #ffffff;
      --footer-bg: #212529;
    }

    body.dark-mode {
      --bg-color: #121212;
      --text-color: #e0e0e0;
      --header-bg: #1f2937;
      --card-bg: #1c1c1c;
      --btn-bg: #0d6efd;
      --btn-color: #ffffff;
      --footer-bg: #1f1f1f;
    }

    body {
      background-color: var(--bg-color);
      color: var(--text-color);
    }

    header, footer {
      background-color: var(--header-bg);
    }

    .card {
      background-color: var(--card-bg);
      color: var(--text-color);
    }

    .btn {
      background-color: var(--btn-bg);
      color: var(--btn-color);
    }

    .btn:hover {
      opacity: 0.9;
    }
  </style>
