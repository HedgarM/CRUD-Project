<div class="form-group row">
  <label class="col-form-label col-sm-2" for="cusfname">First Name</label>
  <div class="col-sm-2">
    <input autofocus class="form-control" name="cusfname" value="<%= model.cusfname %>" required />
  </div>
  <div class="col-sm-auto">
    <span class="form-text text-muted ms-2">(Required)</span>
  </div>
</div>

<div class="form-group row">
  <label class="col-form-label col-sm-2" for="cuslname">Last Name</label>
  <div class="col-sm-2">
    <input class="form-control" name="cuslname" value="<%= model.cuslname %>" required />
  </div>
  <div class="col-sm-auto">
    <span class="form-text text-muted ms-2">(Required)</span>
  </div>
</div>

<div class="form-group row">
  <label class="col-form-label col-sm-2" for="cusstate">State</label>
  <div class="col-sm-1">
    <input 
      class="form-control" 
      name="cusstate" 
      maxlength="2" 
      pattern="[A-Za-z]{2}" 
      title="Please match the requested format: 2 letters only" 
      value="<%= model.cusstate %>" 
    />
  </div>
</div>


<div class="form-group row">
  <label class="col-form-label col-sm-2" for="cussalesytd">Sales YTD</label>
  <div class="col-sm-2">
    <input class="form-control" name="cussalesytd" value="<%= model.cussalesytd %>" />
  </div>
</div>

<div class="form-group row">
  <label class="col-form-label col-sm-2" for="cussalesprev">Previous Years Sales</label>
  <div class="col-sm-2">
    <input class="form-control" name="cussalesprev" value="<%= model.cussalesprev %>" />
  </div>
</div>
<br>
