<!-- Robot Eye Tracking Script -->
<script>
  const leftEye = document.getElementById("left-eye");
  const rightEye = document.getElementById("right-eye");

  document.addEventListener("mousemove", (e) => {
    const robot = document.querySelector(".robot");
    const rect = robot.getBoundingClientRect();
    const centerX = rect.left + rect.width / 2;
    const centerY = rect.top + rect.height / 2;

    // Calculate angle and distance for the eyes
    const angle = Math.atan2(e.clientY - centerY, e.clientX - centerX);
    const distance = Math.min(10, Math.hypot(e.clientX - centerX, e.clientY - centerY) / 15);

    const offsetX = Math.cos(angle) * distance;
    const offsetY = Math.sin(angle) * distance;

    leftEye.style.transform = `translate(${offsetX}px, ${offsetY}px)`;
    rightEye.style.transform = `translate(${offsetX}px, ${offsetY}px)`;
  });
</script>

<!-- Robot Styles -->
<style>
  /* Robot Container */
  .robot {
    position: relative;
    width: 150px;
    height: 150px;
    margin: 20px auto;
  }

  /* Antennas */
  .antenna {
    position: absolute;
    width: 10px;
    height: 30px;
    background-color: #e90000;
    border-radius: 5px;
  }
  
  .left-antenna {
    top: -30px;
    left: 30px;
  }

  .right-antenna {
    top: -30px;
    right: 30px;
  }

  /* Robot Head */
  .robot-head {
    position: relative;
    width: 100%;
    height: 100%;
    background-color: #9aa4af; /* Robot Blue */
    border-radius: 20px;
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.3);
  }

  /* Robot Eyes */
  .eye {
    position: absolute;
    width: 30px;
    height: 30px;
    background-color: rgb(29, 29, 29);
    border-radius: 50%;
    top: 40%;
    transform: translateY(-50%);
    box-shadow: inset 0 4px 6px rgba(42, 170, 255, 0.4);
  }

  #left-eye {
    left: 30px;
  }

  #right-eye {
    right: 30px;
  }

  .eye::before {
    content: "";
    position: absolute;
    width: 12px;
    height: 12px;
    background-color: rgb(15, 167, 255);
    border-radius: 50%;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
  }

  /* Robot Mouth */
  .mouth {
    position: absolute;
    bottom: 20px;
    left: 50%;
    width: 60px;
    height: 10px;
    background-color: black;
    transform: translateX(-50%);
    border-radius: 5px;
  }
</style>

